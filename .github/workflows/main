# Name of your workflow
name: Deploy Red AI to GitHub Pages

# Run this workflow on every push to the main branch
on:
  push:
    branches: [ main ]
  # Allows you to run this workflow manually from the Actions tab
  workflow_dispatch:

# Sets permissions for the GITHUB_TOKEN to allow deployment to GitHub Pages
permissions:
  contents: read
  pages: write
  id-token: write

# Allow only one concurrent deployment, skipping runs queued between the run in-progress and latest queued.
concurrency:
  group: "pages"
  cancel-in-progress: true

jobs:
  # Build and deploy job
  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    steps:
      # 1. Check out your repository code
      - name: Checkout
        uses: actions/checkout@v4

      # 2. Set up Node.js
      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: 'npm'

      # 3. Install project dependencies
      - name: Install dependencies
        run: npm install

      # 4. Build the application for production
      # This step securely uses the API_KEY secret you created
      - name: Build
        run: npm run build
        env:
          API_KEY: ${{ secrets.API_KEY }}

      # 5. Set up GitHub Pages
      - name: Setup Pages
        uses: actions/configure-pages@v5

      # 6. Upload the built application as an artifact
      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          # This should match the output directory of your build command (Vite's default is 'dist')
          path: './dist'

      # 7. Deploy the artifact to GitHub Pages
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
